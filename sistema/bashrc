alias ls='ls --color=auto'

#---------------
# Alias Pacman.
#---------------
alias pu='sudo packer-color -Syu'
alias pi='sudo pacman-color -S'
alias pr='sudo pacman-color -Rns'
alias ps='pacman-color -Ss'
alias ph='pacman-color -Qdt'
alias pc='sudo pacman-color -Scc'

#------------
# Mis alias.
